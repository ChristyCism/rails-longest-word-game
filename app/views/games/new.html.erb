<div class="container">
  <h1>New game</h1>

  <div class="list">
    <% @letters.each do |letter| %>
      <p><%= letter.capitalize %></p>
      <% end %>
  </div>

  <div class="form">
    <p>What is the longest word you can find?</p>
    <form action="/score" method="post" class="input-group mb-3">
      <%= hidden_field_tag :authenticity_token, form_authenticity_token %>
      <%= hidden_field_tag :letters, @letters.join %>
      <input type="text" name="guess"  class="form-control" placeholder="Type here">
      <div class="input-group-append">
        <input type="submit" class="btn btn-outline-secondary" type="button" value="Play">
      </div>
    </form>
  </div>
</div>


